{
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*": ["types/*"],
            "~~/*": ["types/*"],
            "~/*": ["./*"]
        }
    },
    "include": ["types/**/*.ts", "types/**/*.d.ts", "src/**/*.ts", "src/**/*.d.ts"]
}
