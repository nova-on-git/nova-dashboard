{
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "../veloris-dashboard/*": ["types/*"],
            "*": ["types/*"],
            "~~/*": ["types/*"],
            "~/*": ["./*"],
            "@layer/*": ["./layers/*"],
            "layer/*": ["./layers/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": [
        "../veloris-dashboard/**/*",
        "../veloris-dashboard/composables/pinia.ts",
        "../veloris-dashboard/.nuxt/*.d.ts",
        "../veloris-dashboard/types/*",
        "../veloris-dashboard/*",
        "types/**/*.ts",
        "types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "layers/**/*",
        "layers/**/*"
    ]
}
